{
  "name": "@qco/root",
  "private": true,
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @qco/db push",
    "db:studio": "turbo -F @qco/db studio",
    "dev": "turbo watch dev --continue --filter=@qco/app...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "biome lint .",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "biome:fix": "biome lint --fix",
    "lint:ws": "bun x sherif@latest",
    "postinstall": "bun lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "knip": "bun with-env knip",
    "with-env": "dotenv -e .env --"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@qco/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.5",
    "@types/node": "24.1.0",
    "knip": "^5.61.3",
    "prettier": "3.5.3",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "prettier": "@qco/prettier-config",
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
